<div class="left">
  <%= form_for(@animal) do |f| %>
    <% if @animal.errors.any? %>
      <%= @animal.errors.count %>件のエラーが発生しました
      <% @animal.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
  <h1>投稿</h1>

    <h4>動物名</h4>
    <%= f.text_field :animal_name %>

    <h4>画像投稿</h4>
    <%= f.attachment_field :image %>

    <h4>説明</h4>
    <%= f.text_area :caption %>

    <h4></h4>
    <%= f.submit '投稿' %>

    <h4></h4>
    <%= link_to :back do %>
      <button>戻る</button>
    <% end %>
  <% end %>
</div>