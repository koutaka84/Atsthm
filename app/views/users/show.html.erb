<div class="container">
	<div class="row">
		<div class="col-xs-3">
			  <%= render "users/profile" %>
		</div>
		<div class="col-xs-9">
			<h2>ユーザー</h2>
<table class="table">
	<thead>
		<tr>
			<th></th>
		    <th>ユーザーネーム</th>
		    <th>タイトル</th>
		    <th></th>
		    <th>説明</th>
		    <th colspan="3"></th>
		</tr>
	</thead>
		<% @animals.each do |animal| %>
		<tr>
			<td><%= attachment_image_tag @user, :profile_image, size: "30x30", fallback: "no_image.jpg" %></td>
            <td><%= @user.name %></td>
            <td><%= link_to animal.animal_name,animal_path(animal.id) %></td>

		    <td><%= attachment_image_tag animal, :image, :fill, 150, 150, format: 'jpeg' %></td>

		    <td><%= animal.caption%></td>

			<td>
               <% unless current_user == animal %>
	                 <% if current_user.following?(animal) %>
	                 <%= form_for(current_user.relationships.find_by(follow_id: animal.id), html: { method: :delete }) do |f| %>
	                 <%= hidden_field_tag :follow_id, animal.id %>
	                 <%= f.submit 'フォロー外す', class: 'btn btn-danger btn-block' %>
               <% end %>
                 <% else %>
                	<%= form_for(current_user.relationships.build) do |f| %>
                    <%= hidden_field_tag :follow_id, animal.id %>
                    <%= f.submit 'フォロー', class: 'btn btn-primary btn-block' %>
                 <% end %>
                <% end %>
               <% end %>
            </td>
		</tr>
		<% end %>
</table>
		</div>
	</div>
</div>
<%= link_to :back do %>
  <button>戻る</button>
<% end %>
