<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<section class="stats">
			  <%#= render 'users/stats' %>
			</section>
			  <%= render "users/profile", user: @user %>

		</div>
		<div class="col-xs-9">
			<h2>マイページ</h2>
<table class="table">
	<thead>
		<tr>
			<th></th>
		    <th>ユーザーネーム</th>
		    <th>タイトル</th>
		    <th></th>
		    <th>説明</th>
		    <th></th>
		    <th colspan="3"></th>
		</tr>
	</thead>
		<% @animals.each do |animal| %>

		<tr>
			<td><%= attachment_image_tag @user, :profile_image, size: "30x30", fallback: "no_image.jpg" %></td>
            <td><%= @user.name %></td>

		    <td><%= attachment_image_tag animal, :image, :fill, 150, 150, format: 'jpeg' %></td>

		    <td><%= animal.caption%></td>

			<td>
          <% unless current_user == @user %>
            <% if current_user.following?(@user) %>
              <%= form_for(current_user.relationships.find_by(follow_id: @user.id), html: { method: :delete }) do |f| %>
                <%= hidden_field_tag :follow_id, @user.id %>
                <%= f.submit 'Unfollow', class: 'btn btn-danger btn-block' %>
              <% end %>
            <% else %>
              <%= form_for(current_user.relationships.build) do |f| %>
                <%= hidden_field_tag :follow_id, @user.id %>
                <%= f.submit 'Follow', class: 'btn btn-primary btn-block' %>
              <% end %>
             <% end %>
			<% end %>
    		</td>

			<div class="row">
				<% if @user == current_user %>
			 		<td><%= link_to "編集", edit_animal_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_" %></td>
				<% end %>
			</div>
		</tr>
		<% end %>

</table>
		</div>
	</div>
</div>
<%= link_to :back do %>
  <button>戻る</button>
<% end %>



